

 @model IEnumerable<Task_3.Entities.Product>
@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<a href="@Url.Action("Create", "Product")" class="btn btn-success mb-3">Add New Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Discount</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Discount</td>
                <td>@product.Price</td>
                <td>
                    <img src="@product.ImagePath" alt="Product Image" style="width: 100px; height: 100px;" />
                </td>
                <td>
                    <a href="@Url.Action("Update", "Product", new { id = product.Id })" class="btn btn-warning">Update</a>
                    <form asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
